<div class="container mt-5 mb-5">
  <div class="d-flex align-items-center justify-content-between">
    <h1 class="mb-3">Restaurants</h1>
    <%= link_to new_restaurant_path do %>
      <div class="add_review btn btn-info mb-3 px-3 py-2">
        <p class="m-0"><i class="fas fa-plus"></i> Add a restaurant</p>
      </div>
    <% end %>
  </div>
  <div class="cards rounded">
    <% @restaurants.each do |restaurant| %>
      <div class="card-product">
        <%= image_tag "https://source.unsplash.com/200x200/?dish #{restaurant.category}" %>
        <div class="card-product-infos">
          <h2><%= restaurant.name %></h2>
          <p><%= restaurant.address %></p>
          <p><%= restaurant.phone_number %></p>
          <p><%= restaurant.category %></p>
          <% if restaurant.reviews.any? %>
            <p><strong> <%= pluralize(restaurant.reviews.count, 'review') %> </strong></p>
          <% end %>
        </div>
        <%= link_to '', restaurant_path(restaurant), class: 'card-link' %>
      </div>


    <% end %>
  </div>
</div>
